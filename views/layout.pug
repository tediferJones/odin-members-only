doctype html
html
  head
    title= title
    link(rel='icon' href='#')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block header 
      div(class='header')
        h1(class='headerChild')
          a(href='/') Members Only

        if currentUser 
          div(class='headerChild')
            a(href='/user') User Info
            a(href='/logout') Log Out
        else 
          div(class='headerChild')
            a(href='/login') Log In
            a(href='/signup') Sign Up
    block content
